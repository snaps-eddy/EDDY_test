<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="font.BaseActivity" >

    <com.snaps.mobile.component.WoodFrameImageView
        android:id="@+id/iv_wood_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wood_h"
        custom:frameType="0" />

    <com.snaps.mobile.component.WoodFrameImageView
        android:id="@+id/iv_wood_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wood_h"
        custom:frameType="1" />

    <com.snaps.mobile.component.WoodFrameImageView
        android:id="@+id/iv_wood_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wood_v"
        custom:frameType="2" />

    <com.snaps.mobile.component.WoodFrameImageView
        android:id="@+id/iv_wood_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wood_v"
        custom:frameType="3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/iv_wood_top"
        android:layout_toLeftOf="@+id/iv_wood_right"
        android:layout_toRightOf="@+id/iv_wood_left"
        android:background="@drawable/wood_shadow_t" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/iv_wood_bottom"
        android:layout_toLeftOf="@+id/iv_wood_right"
        android:layout_toRightOf="@+id/iv_wood_left"
        android:background="@drawable/wood_shadow_b" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_wood_bottom"
        android:layout_below="@+id/iv_wood_top"
        android:layout_toRightOf="@+id/iv_wood_left"
        android:background="@drawable/wood_shadow_l" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_wood_bottom"
        android:layout_below="@+id/iv_wood_top"
        android:layout_toLeftOf="@+id/iv_wood_right"
        android:background="@drawable/wood_shadow_r" />

</RelativeLayout>