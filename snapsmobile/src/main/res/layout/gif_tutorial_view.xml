<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc363636">

    <RelativeLayout
        android:id="@+id/handAnimationViewParent"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.snaps.mobile.tutorial.new_tooltip_tutorial.HandAnimationView
            android:id="@+id/handAnimationView"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <ImageView
            android:id="@+id/imageViewDragAnimationView"
            android:visibility="gone"
            android:layout_width="160dp"
            android:layout_height="160dp"/>

        <ImageView
            android:id="@+id/imageViewHandAnimationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <font.FTextView
        android:id="@+id/textViewMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/handAnimationViewParent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="인화 영역을 설정 하세요"
        android:textColor="@color/white"
        android:textSize="12dp"
        custom:customFont="@string/font_name_ygt_740" />

    <RelativeLayout
        android:id="@+id/relativeLayoutTopMost"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>