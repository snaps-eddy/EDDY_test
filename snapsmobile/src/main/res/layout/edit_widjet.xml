<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_editlayout"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:clickable="true" >

    <TextView
        android:id="@+id/item_minusbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_minus"
        android:focusable="true" />

    <EditText
        android:id="@+id/item_edit"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:background="@drawable/img_photoprint_edittext_bg"
        android:clickable="true"
        android:focusable="true"
        android:inputType="number"
        android:gravity="center"
        android:maxLength="2" />

    <TextView
        android:id="@+id/item_plusbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_plus"
        android:focusable="true" />

</LinearLayout>