<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/left_top_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/top_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/left_top_shadow" />

    <ImageView
        android:id="@+id/left_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@id/left_top_shadow" />


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/left_shadow"
        android:layout_below="@id/top_shadow" />

    <ImageView
        android:id="@+id/bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@id/container"
        android:layout_alignLeft="@id/container"
        android:layout_alignRight="@id/container" />

    <ImageView
        android:id="@+id/right_top_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/container" />

    <ImageView
        android:id="@+id/right_shadow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/container"
        android:layout_alignBottom="@id/container"
        android:layout_below="@id/right_top_shadow" />

    <ImageView
        android:id="@+id/left_bottom_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_shadow" />

    <ImageView
        android:id="@+id/right_bottom_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bottom_shadow"
        android:layout_below="@id/right_shadow" />

</RelativeLayout>