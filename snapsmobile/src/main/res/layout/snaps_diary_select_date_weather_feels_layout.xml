<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_diary_list_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/snaps_diary_title_include"
        layout="@layout/_include_theme_title"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.0133"/>

    <LinearLayout
        android:id="@+id/snaps_diary_write_one_step_calendar_ly"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.1166"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_diary_list_round"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingTop="14dp">

        <font.FTextView
            android:id="@+id/snaps_diary_write_one_step_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="20dp"/>

        <ImageView
            android:src="@drawable/icon_diary_calendar_large"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.0133"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.3933"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_diary_list_round"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <font.FTextView
            android:id="@+id/snaps_diary_write_one_step_weather_state_tv"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.254"
            android:gravity="center"
            android:text="@string/diary_weather_text_default"
            android:textColor="#333333"
            android:textSize="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddcdc"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.093"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.178"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_sunshine_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_sunshine"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_cloudy_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_cloudy"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_wind_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_wind"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_rainy_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_rainy"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.169"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.178"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_snowy_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_snowy"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_dust_storm_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_dust_storm"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_lightning_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_lightning"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_weather_fog_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_weather_fog"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.119"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.0133"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.3933"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_diary_list_round"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <font.FTextView
            android:id="@+id/snaps_diary_write_one_step_feels_state_tv"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.254"
            android:gravity="center"
            android:text="@string/diary_feels_text_default"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddcdc"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.093"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.178"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_happy_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_happy"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_no_feel_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_normal"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_funny_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_funny"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_thanks_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_thanks"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.169"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.178"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_misfortune_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_misfortune"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_sad_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_sad"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_angry_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_angry"/>

            <ImageView
                android:id="@+id/snaps_diary_write_one_step_feels_tired_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_diary_feels_tired"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.119"/>
    </LinearLayout>

    <Button
        android:id="@+id/snaps_diary_write_one_step_feels_qa_test_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="미션 실패 처리"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.02"/>

</LinearLayout>