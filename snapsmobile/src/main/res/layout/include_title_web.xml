<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_title_bar_height"
    android:background="@color/white" >

     <RelativeLayout
        android:id="@+id/btnTitleLeftLy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >
	    <ImageView
	        android:id="@+id/btnTitleLeft"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:onClick="onClick"
	        android:scaleType="centerInside"
	        android:src="@drawable/btn_prev" />
    </RelativeLayout>

    <font.FTextView
        android:id="@+id/txtTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#191919"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/title_size"
        custom:customFont="@string/font_name_ygt_760" />

    <font.FTextView
        android:id="@+id/btnTopEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:visibility="invisible"
        android:paddingRight="10dp"
        android:text="@string/edit"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <font.FTextView
        android:id="@+id/btnTopEditComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:paddingRight="10dp"
        android:text="@string/done"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnTitleHamburgerMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/selector_hamburger_menu_icon"/>

    <!--<View-->
        <!--android:id="@+id/TopLine"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="@color/title_line_color" />-->

</RelativeLayout>