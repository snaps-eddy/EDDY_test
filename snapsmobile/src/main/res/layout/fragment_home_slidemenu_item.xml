<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutBadgeMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal">
        <font.FTextView
            android:id="@+id/txtBadgeMenu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/cart"
            android:textColor="@color/white"
            android:textSize="11sp" />
        <font.FTextView
            android:id="@+id/txtCartBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/count_cart"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <font.FTextView
        android:id="@+id/txtNormalMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/notice"
        android:textColor="@color/white"
        android:textSize="11sp" />
    
    <LinearLayout
        android:id="@+id/layoutAppRun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp">
        <ImageView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:adjustViewBounds="true"/>
        <font.FTextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="10dp"
	        android:gravity="center"
	        android:text="@string/homemenu9_kakao"
	        android:textColor="@color/white"
	        android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>