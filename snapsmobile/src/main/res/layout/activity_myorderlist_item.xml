<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/imgOrder"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_kakaostory" />

    <View
        android:layout_width="1px"
        android:layout_height="95dp"
        android:layout_marginLeft="10dp"
        android:background="#e5e5e5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <font.FTextView
            android:id="@+id/txtOrderProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="스티커킷 외 7건"
            android:textSize="15sp" />

        <font.FTextView
            android:id="@+id/txtOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="2013.4.12"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <font.FTextView
                android:id="@+id/txtOrdertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:singleLine="true"
                android:text="주문번호"
                android:textSize="12sp" />

            <font.FTextView
                android:id="@+id/txtOrderCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="DD72020931"
                android:textSize="12sp" />

            <font.FTextView
                android:id="@+id/txtOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:text="주문처리중"
                android:textColor="@color/red"
                android:textSize="13sp" />
        </LinearLayout>

        <font.FTextView
            android:id="@+id/txtOrderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_deliver"
            android:text="@string/check_delivery"
            android:textColor="@color/brown" />
    </LinearLayout>

