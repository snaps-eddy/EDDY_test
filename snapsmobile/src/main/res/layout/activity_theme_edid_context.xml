<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/_include_theme_title" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/title_line_color"
        android:visibility="gone"/>

    <com.snaps.mobile.component.SnapsEditText
        android:id="@+id/content_edit"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="@string/initial_text"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textSize="18dp"
        android:background="#00000000"
        android:padding="5dp"
        android:textColorHint="#aaaaaa" />
   <!--      android:background="@drawable/btn_white"--> 
    <include
        android:id="@+id/card_text_align_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/_include_card_text_align_layout"/>

</LinearLayout>