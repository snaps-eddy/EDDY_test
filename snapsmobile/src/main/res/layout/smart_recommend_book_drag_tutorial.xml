<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smart_recommend_book_drag_tutorial_parent_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc191919">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/smart_recommend_book_drag_tutorial_gif_iv"
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="160dp" />

        <font.FTextView
            android:id="@+id/smart_recommend_book_drag_tutorial_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/smart_recommend_book_drag_tutorial_desc"
            android:textColor="#ffffff"
            android:textSize="13dp"
            custom:customFont="@string/font_name_ygt_740" />
    </LinearLayout>

</RelativeLayout>