<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F2363636"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_loginp_login_back_iv"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_sticky_back"/>

        <font.FTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/find_id_and_password"
            android:textColor="#ffffff"
            android:textSize="14dp"
            custom:customFont="@string/font_name_ygt_760"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <font.FEditText
            android:id="@+id/editName"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="@string/name"
            android:imeOptions="actionNext"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#999999"
            android:textSize="12dp"
            custom:customFont="@string/font_name_ygt_740"/>

        <ImageView
            android:id="@+id/editNameUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#555555"/>

        <font.FEditText
            android:id="@+id/editEmail"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#999999"
            android:textSize="12dp"
            custom:customFont="@string/font_name_ygt_740"/>

        <ImageView
            android:id="@+id/editEmailUnderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#555555"/>

        <font.FTextView
            android:id="@+id/btnPwdFind"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/selector_black_btn"
            android:gravity="center"
            android:text="@string/send_temp_pwd"
            android:textColor="@color/white"
            android:textSize="13dp"
            custom:customFont="@string/font_name_ygt_740"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <font.FTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/findpwd_desc_02"
                android:textColor="#999999"
                android:textSize="11dp"
                custom:customFont="@string/font_name_ygt_740"/>

            <font.FTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/findpwd_desc_03"
                android:textColor="#999999"
                android:textSize="11dp"
                custom:customFont="@string/font_name_ygt_740"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#555555"/>

        <LinearLayout
            android:id="@+id/fragment_loginp_pwdfind_tel_layout"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:background="#bbbbbb"/>
            </LinearLayout>

            <font.FTextView
                android:id="@+id/editTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:gravity="left|center_vertical"
                android:text="@string/not_emailid_call_center"
                android:textColor="#999999"
                android:textSize="11dp"
                custom:customFont="@string/font_name_ygt_740"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout><!--
