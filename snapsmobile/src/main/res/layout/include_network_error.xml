<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" >


    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wifi" />

        <font.FTextView
            android:id="@+id/tv_network_text_title"
            custom:customFont="@string/font_name_ygt_740"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_wifi"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12dp"
            android:text="@string/network_err_msg_title"
            android:textColor="@color/black" />

        <font.FTextView
            android:id="@+id/tv_network_text_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:customFont="@string/font_name_ygt_740"
            android:layout_below="@+id/tv_network_text_title"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12dp"
            android:text="@string/network_err_msg_sub"
            android:textColor="@color/black" />


        <font.FTextView
            android:id="@+id/btn_retry"
            custom:customFont="@string/font_name_ygt_740"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@+id/tv_network_text_d"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_black"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/retry"
            android:textSize="11dp"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>

