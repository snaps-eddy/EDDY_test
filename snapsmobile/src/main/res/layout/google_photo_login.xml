<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/kakao_login_bg_ly"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f5"
    android:orientation="vertical">

    <!--  android:background="@drawable/kakao_connect_img" -->

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/google_login_back_iv"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_kakao_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <font.FTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/google_photo_login"
            android:textColor="#191919"
            android:textSize="14dp"
            custom:customFont="@string/font_name_ygt_760"/>

    </RelativeLayout>

    <font.FTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/google_sign_in_title"
        android:textColor="#191919"
        android:textSize="24dp"
        custom:customFont="@string/font_name_ygt_740"/>

    <font.FTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/google_sign_in_desc"
        android:textColor="#191919"
        android:textSize="13dp"
        custom:customFont="@string/font_name_ygt_740"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_google_sign_in_center_icon"
        android:layout_marginTop="66dp"
        android:scaleType="centerInside"/>

    <RelativeLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>



