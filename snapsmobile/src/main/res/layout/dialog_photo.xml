<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <font.FTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/production_not_available"
            android:textColor="@color/selector_black_btn"
            android:textSize="14dp"
            custom:customFont="@string/font_name_ygt_760" />

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_close_b" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_upload_fail_alert" />

        <font.FTextView
            android:id="@+id/upload_failed_org_img_list_popup_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:text="@string/making_keyring_org_img_popup_desc"
            android:textColor="#999999"
            android:textSize="11dp"
            custom:customFont="@string/font_name_ygt_740" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_extracted_rect_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone" />

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/contents"
        android:padding="16dp"
        android:scaleType="fitCenter" />

    <font.FTextView
        android:id="@+id/making_keyring_img_popup_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="#e5191919"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        custom:customFont="@string/font_name_ygt_740" />

</LinearLayout>