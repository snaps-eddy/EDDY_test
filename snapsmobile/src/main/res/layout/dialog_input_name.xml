<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_alert_white_bg"
    android:minWidth="300dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:orientation="vertical" >

        <font.FTextView
            android:id="@+id/custom_dialog_addition_main_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="16dp" />

        <font.FTextView
            android:id="@+id/input_name_title"
            android:text="@string/dialog_save_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#474747"
            android:textSize="16dp" />

        <font.FTextView
            android:id="@+id/custom_dialog_addition_sub_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="12dp" />

        <font.FTextView
            android:id="@+id/custom_dialog_sub_title"
            android:text="@string/edit_input_name_payment_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#474747"
            android:textSize="13dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DEDEDE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/button_name_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <font.FTextView
                android:id="@+id/dialog_input_name_cancel_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#474747"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_input_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:background="#DEDEDE" />

            <font.FTextView
                android:id="@+id/dialog_input_name_confirm_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/save"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#e54736"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



