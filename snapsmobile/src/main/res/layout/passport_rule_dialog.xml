<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="#b3191919"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:background="#191919"
        android:orientation="vertical"
        android:padding="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <font.FTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="규정을 확인해주세요."
                    android:textColor="#191919"
                    android:textSize="14dp"
                    custom:customFont="@string/font_name_ygt_760" />
                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="14dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/btn_close_s"
                    android:visibility="gone" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#eeeeee" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <font.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="주민등록·여권 공통규정"
                    android:textColor="#191919"
                    android:textSize="12dp"
                    custom:customFont="@string/font_name_ygt_760" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginRight="6dp"
                        android:background="#191919" />
                    <font.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="포토샵 등 수정한 사진 사용 불가"
                        android:textColor="#999999"
                        android:textSize="12dp"
                        custom:customFont="@string/font_name_ygt_740" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginRight="6dp"
                        android:background="#191919" />
                    <font.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="6개월 이내 촬영한 상반신 탈모 사진"
                        android:textColor="#999999"
                        android:textSize="12dp"
                        custom:customFont="@string/font_name_ygt_740" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fafafa"
                android:orientation="vertical"
                android:padding="16dp">
                <font.FTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="여권 필수 규정"
                    android:textColor="#191919"
                    android:textSize="12dp"
                    custom:customFont="@string/font_name_ygt_760" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/m_idphoto_img" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginRight="6dp"
                        android:background="#191919" />
                    <font.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="흰색 배경, 테두리 없는 사진"
                        android:textColor="#999999"
                        android:textSize="12dp"
                        custom:customFont="@string/font_name_ygt_740" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginRight="6dp"
                        android:background="#191919" />
                    <font.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="머리길이 (정수리~턱까지)가 3.2~3.6cm 이내"
                        android:textColor="#999999"
                        android:textSize="12dp"
                        custom:customFont="@string/font_name_ygt_740" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginRight="6dp"
                        android:background="#e36a63" />
                    <font.FTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="이외 자세한 사항은 외교부 홈페이지에서 확인해주세요."
                        android:textColor="#e36a63"
                        android:textSize="12dp"
                        custom:customFont="@string/font_name_ygt_740" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutBottom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_not_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/checkBox_not_again"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans_checkbox_agree" />
                        <font.FTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="start"
                            android:text="@string/back_to_back_surface"
                            android:textColor="#191919"

                            android:textSize="12dp"
                            custom:customFont="@string/font_name_ygt_740" />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <LinearLayout
                        android:id="@+id/btn_confim"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <font.FTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            android:gravity="start"
                            android:text="@string/confirm"
                            android:textColor="#191919"
                            android:textSize="13dp"
                            custom:customFont="@string/font_name_ygt_740" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>