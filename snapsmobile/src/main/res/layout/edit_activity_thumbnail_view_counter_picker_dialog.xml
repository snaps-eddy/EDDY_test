<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="312dp"
        android:layout_height="246dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <com.snaps.mobile.component.SnapsNumberPicker
            android:id="@+id/edit_activity_thumbnail_view_counter_picker_dialog_number_picker"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <font.FTextView
            android:id="@+id/edit_activity_thumbnail_view_counter_picker_dialog_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_black_btn"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#ffffff"
            android:textSize="13dp"
            custom:customFont="@string/font_name_ygt_740" />

    </LinearLayout>
</RelativeLayout>
