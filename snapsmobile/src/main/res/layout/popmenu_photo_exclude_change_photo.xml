            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/menu_bg_center"-->
            <!--android:clickable="true"-->
            <!--android:gravity="center"-->
            <!--android:onClick="onClick"-->
            <!--android:padding="5dp"-->
            <!--android:text="@string/modify"-->
            <!--style="@style/popmenuTextStyle" />-->

        <!--<View-->
            <!--android:id="@+id/popup_menu_photo_change_line"-->
            <!--android:layout_width="1px"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/menu_bg_line"-->
            <!--android:visibility="gone"/>-->

        <font.FTextView
            android:id="@+id/popup_menu_photo_delete"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_bg_right"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="5dp"
            android:text="@string/delete"
            style="@style/popmenuTextStyle" />
    </LinearLayout>

</LinearLayout>