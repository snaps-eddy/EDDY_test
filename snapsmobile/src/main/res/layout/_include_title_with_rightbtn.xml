<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_title_bar_height"
    android:background="@drawable/top_bg"
    android:gravity="center_vertical" >

      <RelativeLayout
        android:id="@+id/btnTitleLeftLy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

	    <ImageView
	        android:id="@+id/btnTitleLeft"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:onClick="onClick"
	        android:scaleType="centerInside"
	        android:src="@drawable/btn_prev" />

    </RelativeLayout>

    <font.FTextView
        android:id="@+id/txtTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textColor="#191919"
        android:text="@string/detail_check_delivery"
        android:textSize="@dimen/title_size"
        custom:customFont="@string/font_name_ygt_760"  />

