<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F2363636"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="146dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_m_w" />
        <font.FTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/rest_id_release"
            android:textColor="#ffffff"
            android:textSize="24dp"
            custom:customFont="@string/font_name_ygt_740" />
        <font.FTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="@string/rest_id_1_year_login"
            android:textColor="#ffffff"
            android:textSize="11dp"
            custom:customFont="@string/font_name_ygt_740" />
        <font.FTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="@string/rest_id_delete"
            android:textColor="#e36a63"
            android:textSize="11dp"
            custom:customFont="@string/font_name_ygt_740" />

        <font.FTextView
            android:id="@+id/rest_id_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_black_btn"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#ffffff"
            android:textSize="13dp"
            custom:customFont="@string/font_name_ygt_740" />

    </LinearLayout>
</LinearLayout>