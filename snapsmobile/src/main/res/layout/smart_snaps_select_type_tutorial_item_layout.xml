<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_round_rd7"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.12"/>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="0px"
        android:layout_weight="0.56"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/smart_snaps_select_type_tutorial_item_animation_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.29"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <font.FTextView
            android:id="@+id/smart_snaps_select_type_tutorial_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="17dp"
            custom:customFont="@string/font_name_ygt_740" />

        <font.FTextView
            android:id="@+id/smart_snaps_select_type_tutorial_item_sub_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="12dp"
            custom:customFont="@string/font_name_ygt_740" />
    </LinearLayout>

</LinearLayout>

