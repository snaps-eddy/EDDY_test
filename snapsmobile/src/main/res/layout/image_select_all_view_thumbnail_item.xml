<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/simple_grid_back"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="76dp"
        android:layout_height="76dp">

        <com.snaps.mobile.component.SnapsTrayLayoutView
            android:id="@+id/imgSelectTrayLayoutView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imgSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="4px"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imgSelector"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_red_e36a63_fill_solid_border_rect"/>

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_tray_delete_icon"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/imgNoprint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/alert_01"
            android:visibility="invisible"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgSelectTrayPlusBtn"
        android:layout_marginTop="16dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:visibility="gone"/>

</RelativeLayout>