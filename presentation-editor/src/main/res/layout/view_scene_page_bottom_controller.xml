<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_layout_change"
        style="@style/Widget.App.Button.TextButton.IconOnly"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:insetTop="12dp"
        android:insetLeft="12dp"
        android:insetRight="12dp"
        android:insetBottom="12dp"
        app:icon="@drawable/ic_layout" />

    <CheckBox
        android:id="@+id/focus_indicator"
        android:layout_width="72dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_scene_focus_indicator"
        android:button="@null"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="11dp"
        tools:ignore="SpUsage"
        tools:text="13" />

    <Button
        android:id="@+id/btn_drag"
        style="@style/Widget.App.Button.TextButton.IconOnly"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/empty_cd"
        android:insetTop="12dp"
        android:insetLeft="12dp"
        android:insetRight="12dp"
        android:insetBottom="12dp"
        app:icon="@drawable/ic_move" />

</RelativeLayout>