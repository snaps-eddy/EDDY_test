<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_placeholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/textimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/empty_cd"
        android:scaleType="matrix"
        app:layout_constraintBottom_toBottomOf="@id/text_placeholder"
        app:layout_constraintEnd_toEndOf="@id/text_placeholder"
        app:layout_constraintStart_toStartOf="@id/text_placeholder"
        app:layout_constraintTop_toTopOf="@id/text_placeholder" />

    <ImageView
        android:id="@+id/outline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/empty_cd"
        android:src="@drawable/shape_rect_text_image"
        app:layout_constraintBottom_toBottomOf="@id/text_placeholder"
        app:layout_constraintEnd_toEndOf="@id/text_placeholder"
        app:layout_constraintStart_toStartOf="@id/text_placeholder"
        app:layout_constraintTop_toTopOf="@id/text_placeholder" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/empty_cd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>